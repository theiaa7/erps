generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model InventoryItem {
  id    Int    @id @default(autoincrement())
  sku   String @unique
  name  String
  stock Int
  price Int
}

model Employee {
  id    Int    @id @default(autoincrement())
  name  String
  role  String
  email String @unique
}

model Invoice {
  id       Int    @id @default(autoincrement())
  customer String
  total    Int
  status   String
}
